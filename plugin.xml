<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        id="nightsteed-ads-admob" version="1.0.0">
    <name>NightsteedAdsCommon</name>
    <description>Nightsteed Ads API</description>
    <license>@2018, NightSteed All Rights reserved</license>
    <keywords>cordova,ads,banner,interstitial,monetization,ad,mopub,cocoon,plugins</keywords>
    <js-module src="www/nightsteed_ads.js" name="Ads">
        <runs/>
    </js-module>

    <platform name="android">
        <source-file src="src/com/nightsteed/ads/AdService.java" target-dir="src/com/nightsteed/ads"/>
        <source-file src="src/com/nightsteed/ads/AdBanner.java" target-dir="src/com/nightsteed/ads"/>
        <source-file src="src/com/nightsteed/ads/AbstractAdBanner.java" target-dir="src/com/nightsteed/ads"/>
        <source-file src="src/com/nightsteed/ads/AdInterstitial.java" target-dir="src/com/nightsteed/ads"/>
        <source-file src="src/com/nightsteed/ads/AbstractAdInterstitial.java" target-dir="src/com/nightsteed/ads"/>
        <source-file src="src/com/nightsteed/ads/AdRewardedVideo.java" target-dir="src/com/nightsteed/ads"/>
        <source-file src="src/com/nightsteed/ads/AbstractAdRewardedVideo.java" target-dir="src/com/nightsteed/ads"/>

        <source-file src="src/com/nightsteed/ads/admob/AdBannerAdMob.java" target-dir="src/com/nightsteed/ads/admob"/>
        <source-file src="src/com/nightsteed/ads/admob/AdInterstitialAdMob.java" target-dir="src/com/nightsteed/ads/admob"/>
        <source-file src="src/com/nightsteed/ads/admob/AdRewardedAdMob.java" target-dir="src/com/nightsteed/ads/admob"/>
        
        <source-file src="src/com/nightsteed/ads/admob/AdServiceAdMob.java" target-dir="src/com/nightsteed/ads/admob"/>
        <source-file src="src/com/nightsteed/ads/cordova/AdMobPlugin.java" target-dir="src/com/nightsteed/ads/cordova"/>
        <source-file src="src/com/nightsteed/ads/cordova/AdServicePlugin.java" target-dir="src/com/nightsteed/ads/cordova"/>


        <config-file target="app/src/main/res/xml/config.xml" parent="/*">
            <feature name="LDAdService">
                <param name="android-package" value="com.nightsteed.ads.cordova.AdServicePlugin"/>
            </feature>
            <feature name="LDAdMobPlugin">
                <param name="android-package" value="com.nightsteed.ads.cordova.AdMobPlugin"/>
            </feature>
        </config-file>

        <config-file target="app/src/main/AndroidManifest.xml" parent="/*">
            <uses-permission android:name="android.permission.INTERNET"/>
            <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
        </config-file>

        <config-file target="app/src/main/AndroidManifest.xml" parent="/manifest/application">
            <activity android:name="com.google.android.gms.ads.AdActivity"
                      android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"/>
        </config-file>

        <framework src="com.google.android.gms:play-services-ads:15.0.1"/>
        <framework src="com.android.support:multidex:1.0.3" />
        <framework src="android/build-extras.gradle" custom="true" type="gradleReference" />

    </platform>

    <dependency id="cocoon-plugin-common" />
</plugin>